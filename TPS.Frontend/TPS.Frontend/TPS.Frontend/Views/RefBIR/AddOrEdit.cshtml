@model TPS.Frontend.Infrastructure.RefBIR
@{
    Layout = null;
}
<div class="alert alert-danger" role="alert" id="error-summary">
</div>
<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="form-group">
        <label class="control-label">Status</label>
        <select asp-for="PayType" class="form-control"
                asp-items="Html.GetEnumSelectList<TPS.Frontend.Infrastructure.Enums.PayType>()">
            <option>Select type ...</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SalaryFrom">Salary From</label>
        <input type="text" class="form-control" asp-for="SalaryFrom" placeholder="Salary From" />
    </div>
    <div class="form-group">
        <label for="SalaryTo">Salary To</label>
        <input type="text" class="form-control" asp-for="SalaryTo" placeholder="Salary To" />
    </div>
    <div class="form-group">
        <label for="AddTax">Add Tax</label>
        <input type="text" class="form-control" asp-for="AddTax" placeholder="Add Tax" />
    </div>
    <div class="form-group">
        <label for="SubtractTaxOver">Subtract Tax Over</label>
        <input type="text" class="form-control" asp-for="SubtractTaxOver" placeholder="Subtract Tax Over" />
    </div>
    <div class="form-group">
        <label for="Multiplier">Multiplier</label>
        <input type="text" class="form-control" asp-for="Multiplier" placeholder="Multiplier" />
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>