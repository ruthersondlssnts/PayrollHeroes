@model TPS.Frontend.Infrastructure.RefLeaveType
@{
    Layout = null;
}
<div class="alert alert-danger" role="alert" id="error-summary">
</div>
<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="form-group">
        <label for="LeaveTypeName">Leave Type Name</label>
        <input type="text" class="form-control" asp-for="LeaveTypeName" placeholder="Name" />
    </div>
    <div class="form-group">
        <label for="LeaveTypeCode">Leave Type Code</label>
        <input type="text" class="form-control" asp-for="LeaveTypeCode" placeholder="Code" />
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsWithpay" />
            <label class="form-check-label" for="IsWithpay">With Pay</label>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>