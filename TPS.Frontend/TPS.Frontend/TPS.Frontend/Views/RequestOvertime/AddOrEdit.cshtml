@{
    Layout = null;
}
@model TPS.Frontend.Infrastructure.RequestOvertime

<div class="alert alert-danger" role="alert" id="error-summary">
</div>

<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="EmployeeId" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="GroupName" />
    <input type="hidden" asp-for="GroupId" />
    <input type="hidden" asp-for="ApprovalStatusId" />
    <input type="hidden" asp-for="ApprovalStatusName" />
    <input type="hidden" asp-for="ApproveDate" />
    <input type="hidden" asp-for="ApproverName" />
    <input type="hidden" asp-for="ApproverRemarks" />
    <input type="hidden" asp-for="Approvers" />
    <input type="hidden" asp-for="ApproverUserId" />
    <input type="hidden" asp-for="CreateDate" />
    <input type="hidden" asp-for="OvertimeTimeOut" />
    <input type="hidden" asp-for="OvertimeTimeIn" />


    <div class="form-group" data-target="#date-overtime" data-toggle="datetimepicker">
        <label for="OvertimeDate">Date</label>

        <div class="input-group date" data-target-input="nearest">
            <input type="text" class="form-control datetimepicker-input" id="date-overtime" asp-for="OvertimeDate" placeholder="Date" />
            <div class="input-group-append">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>

    <div class="form-group" data-target="#timein-overtime" data-toggle="datetimepicker">
        <label for="OvertimeTimeIn">Time In</label>

        <div class="input-group date" data-target-input="nearest">
            <input type="text" class="form-control  datetimepicker-input" id="timein-overtime" asp-forma placeholder="In" maxlength="5" />
            <div class="input-group-append">
                <div class="input-group-text"><i class="fa fa-clock"></i></div>
            </div>
        </div>
    </div>

    <div class="form-group" data-target="#timeout-overtime" data-toggle="datetimepicker">
        <label for="OvertimeTimeOut">Time Out</label>
        <div class="input-group date" data-target-input="nearest">
            <input type="text" class="form-control  datetimepicker-input" id="timeout-overtime" placeholder="Out" maxlength="5" />
            <div class="input-group-append">
                <div class="input-group-text"><i class="fa fa-clock"></i></div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="Remarks">Remarks</label>
        <input type="text" class="form-control" asp-for="Remarks" placeholder="Remarks" />
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        @if (Model.ApprovalStatusName != "APPROVED")
        {
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</form>

