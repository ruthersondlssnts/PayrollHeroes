@{
    Layout = null;
}
@model TPS.Frontend.Infrastructure.DTO.DTOApproval
<div class="alert alert-danger" role="alert" id="error-summary">
</div>
<form asp-action="ProcessApproval" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="ApproverUserId" />

    <div class="form-group">
        <label>Remarks</label>
        <textarea class="form-control" asp-for="Remarks" rows="3" placeholder="Enter ..."></textarea>
    </div>
    <div class="form-group">
        <label class="control-label">Status</label>
        <select asp-for="ApprovalStatus" class="form-control"
                asp-items="Html.GetEnumSelectList<TPS.Frontend.Infrastructure.Enums.ApprovalStatus>()">
            <option>Select type ...</option>
        </select>
    </div>


    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>