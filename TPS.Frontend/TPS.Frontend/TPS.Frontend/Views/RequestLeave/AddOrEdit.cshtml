@{
    Layout = null;
}
@model TPS.Frontend.Infrastructure.RequestLeave


<div class="alert alert-danger" role="alert" id="error-summary">
</div>

<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="EmployeeId" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="GroupId" />
    <input type="hidden" asp-for="GroupName" />
    <input type="hidden" asp-for="ApprovalStatusId" />
    <input type="hidden" asp-for="ApprovalStatusName" />
    <input type="hidden" asp-for="ApproveDate" />
    <input type="hidden" asp-for="ApproverName" />
    <input type="hidden" asp-for="ApproverRemarks" />
    <input type="hidden" asp-for="Approvers" />
    <input type="hidden" asp-for="ApproverUserId" />
    <input type="hidden" asp-for="CreateDate" />
    <input type="hidden" asp-for="LeaveTypeName" />
    <input type="hidden" asp-for="PrevLeaveDay" />

    <div class="form-group">
        <label>Leave Type Name</label>
        <input type="hidden" disabled="disabled" asp-for="LeaveTypeId" id="hidden_leavetype" />
        <select class="custom-select" asp-for="LeaveTypeId">
        </select>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group" data-target="#date-start" data-toggle="datetimepicker">
                <label for="DateStart">From</label>
                <div class="input-group date" data-target-input="nearest">
                    <input type="text" id="date-start" class="form-control datetimepicker-input" asp-for="DateStart" placeholder="Date Start" />
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" data-target="#date-end" data-toggle="datetimepicker">
                <label for="DateEnd">To</label>
                <div class="input-group date" data-target-input="nearest">
                    <input type="text" id="date-end" class="form-control datetimepicker-input" asp-for="DateEnd" placeholder="Date End" />
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-check-inline">
            <input type="checkbox" class="form-check-input" asp-for="IsHalf" />
            <label class="form-check-label" asp-for="IsHalf">Half Date End</label>
        </div>
        <div class="form-check-inline">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" id="firsthalfradio" asp-for="IsFirstHalf" checked value="true" disabled>First Half
            </label>
        </div>
        <div class="form-check-inline">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" id="secondhalfradio" asp-for="IsFirstHalf" value="false" disabled>Second Half
            </label>
        </div>
    </div>
    <div class="form-group">
        <label>No. Of. Days</label>
        <input type="text" class="form-control" asp-for="LeaveDay" placeholder="Total Days" readonly />
    </div>
    <div class="form-group">
        <label>Remaining Leave Balance</label>
        <input type="text" class="form-control" id="input_balance" disabled placeholder="Balance" />
    </div>

    <div class="form-group">
        <label for="Name">Remarks</label>
        <input type="text" class="form-control" asp-for="Remarks" placeholder="Remarks" />
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        @if (Model.ApprovalStatusName != "APPROVED")
        {
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</form>