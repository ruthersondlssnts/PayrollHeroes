@model TPS.Frontend.Infrastructure.RefSSS
@{
    Layout = null;
}
<div class="alert alert-danger" role="alert" id="error-summary">
</div>
<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
    </div>

    <div class="form-group">
        <label for="SalaryFrom">Salary From</label>
        <input type="text" class="form-control" asp-for="SalaryFrom" placeholder="Salary From" />
    </div>
    <div class="form-group">
        <label for="SalaryTo">Salary To</label>
        <input type="text" class="form-control" asp-for="SalaryTo" placeholder="Salary To" />
    </div>
    <div class="form-group">
        <label for="MonthlySalaryCredit">Monthly Salary Credit</label>
        <input type="text" class="form-control" asp-for="MonthlySalaryCredit" placeholder="Monthly Salary Credit" />
    </div>
    <div class="form-group">
        <label for="EmployeeShare">Employee Share</label>
        <input type="text" class="form-control" asp-for="EmployeeShare" placeholder="Employee Share" />
    </div>
    <div class="form-group">
        <label for="EmployerShare">Employer Share</label>
        <input type="text" class="form-control" asp-for="EmployerShare" placeholder="Employer Share" />
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>