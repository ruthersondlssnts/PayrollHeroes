@model TPS.Frontend.Infrastructure.RefPayrollCutoff
@{
    Layout = null;
}
<div class="alert alert-danger" role="alert" id="error-summary">
</div>
<form asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Start" />
    </div>
    <div class="form-group" data-target="#date-cutoffstart" data-toggle="datetimepicker">
        <label for="CutoffStartDate">Start</label>
        <div class="input-group date" data-target-input="nearest">
            <input type="text" id="date-cutoffstart" class="form-control datetimepicker-input" asp-for="CutoffStartDate" placeholder="Start" />
            <div class="input-group-append">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>


    <div class="form-group" data-target="#date-cutoffend" data-toggle="datetimepicker">
        <label for="CutoffEndDate">End</label>
        <div class="input-group date" data-target-input="nearest">
            <input type="text" class="form-control datetimepicker-input" id="date-cutoffend" asp-for="CutoffEndDate" placeholder="End" />
            <div class="input-group-append">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">

            <input type="checkbox" class="form-check-input" asp-for="IsProcessGovernment" />
            <label class="form-check-label" for="IsProcessGovernment">Government</label>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>